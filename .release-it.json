{
  "$schema": "https://unpkg.com/release-it@18/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireBranch": "main"
  },
  "github": {
    "release": false
  },
  "hooks": {
    "before:init": ["git-cliff --output CHANGELOG.md"],
    "after:bump": ["git-cliff --output CHANGELOG.md"]
  }
}
